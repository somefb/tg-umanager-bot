{
  "compilerOptions": {
    "outDir": "./build",
    "noEmitOnError": true,
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "files": ["src/index.ts", "src/global.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", ".*"]
}
